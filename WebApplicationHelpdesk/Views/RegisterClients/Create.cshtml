
@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html>
<head>
    <title>Dodaj Klienta</title>
    <style>
        form {
            width: 300px;
            margin: 0 auto;
        }

        input, textarea {
            width: 100%;
            margin-bottom: 10px;
        }

        button {
            width: 100%;
        }
    </style>
</head>
<body>
    <form action="/RegisterClients/Create" method="post">
        <h3>Dodaj klienta</h3>
        <div class="form-group mb-4">
            <label class="control-label" for="Name">Name</label>
            <input class="form-control" type="text" id="Name" name="Name" />
        </div>
        <div class="form-group mb-4">
            <label class="control-label" for="Address">Address</label>
            <input class="form-control" type="text" id="Address" name="Address" />
        </div>
        <div class="form-group mb-4">
            <label class="control-label" for="PostCode">Kod Pocztowy</label>
            <input class="form-control" type="text" id="PostCode" name="PostCode" />
        </div>
        <div class="form-group mb-4">
            <label class="control-label" for="Nip">Numer NIP</label>
            <input class="form-control" type="text" id="Nip" name="Nip" />
        </div>
        <div class="form-gorup mb-4">
            <input type="submit" value="Create" class="btn btn-primary">
        </div>

        <div class="card" style="width: 18rem;">
            <img src="https://tinypic.com/hubfs/StoragePhotoHosting_Blog.png" class="card-img-top" alt="...">
            <div class="card-body">
                <p class="card-text">Tutaj stworzysz konto dla naszych klientów.</p>
            </div>
        </div>
    </form>
</body>
</html>

