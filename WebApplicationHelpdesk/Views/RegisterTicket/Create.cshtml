@using WebApplicationHelpdeskDomain.Entities.Ticket;
@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html>
<head>
    <title>Dodaj Zgłoszenie</title>
    <style>
        form {
            width: 300px;
            margin: 0 auto;
        }

        input, textarea {
            width: 100%;
            margin-bottom: 10px;
        }

        button {
            width: 100%;
        }
    </style>
</head>
<body>
    <form action="/RegisterTicket/Create" method="post">
        <h3>Dodaj Zgłoszenie</h3>
        <div class="form-group mb-4">
            <label class="control-label" for="Title">Tytuł</label>
            <input class="form-control" type="text" id="Title" name="Title" />
        </div>
        <div class="form-group mb-4">
            <label class="control-label" for="Description">Opis</label>
            <input class="form-control" type="text" id="Description" name="Description" />
        </div>
        <div class="form-group mb-4">
            <label class="control-label" for="TicketTypee">Rodzaj zgłoszenia</label>
            <input class="form-control" type="text" id="TicketTypee" name="TicketTypee" />
        </div>
        <div class="form-gorup mb-4">
            <input type="submit" value="Create" class="btn btn-primary">
        </div>

        <div class="card" style="width: 18rem;">
            <img src="https://tinypic.com/hubfs/StoragePhotoHosting_Blog.png" class="card-img-top" alt="...">
            <div class="card-body">
                <p class="card-text">Tutaj utworzysz zgłoszenie!.</p>
            </div>
        </div>
    </form>
</body>
</html>


